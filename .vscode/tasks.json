{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build all cpp files",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "& {",
                "$cppFiles = Get-ChildItem -Recurse -Filter *.cpp | ForEach-Object { $_.FullName.Replace(' ', '` ') };",
                "$cppFilesString = $cppFiles -join ' ';",
                "$gppPath = 'C:\\msys64\\ucrt64\\bin\\g++.exe';",
                "$output = '${workspaceFolder}\\main.exe';",
                "Invoke-Expression \"$gppPath -fdiagnostics-color=always -g $cppFilesString -o $output\"",
                "}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Task to build all cpp files in the workspace and subfolders."
        }
    ]
}
